
@model BookCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a book</h1>

<div class="container">
<form method="post" asp-action="Create">
  <div class="row">
      <div class="mb-3 col-md-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input  class="form-control" asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="mb-3 col-md-3">
        <label asp-for="ProductCode" class="form-label">ProductCode</label>
        <input class="form-control" asp-for="ProductCode" placeholder="ProductCode">
         <span asp-validation-for="ProductCode" class="text-danger"></span>
      </div>
      <div class="mb-3 col-md-3">
        <label asp-for="CostPrice" class="form-label">CostPrice</label>
        <input class="form-control" asp-for="CostPrice" placeholder="CostPrice">
         <span asp-validation-for="CostPrice" class="text-danger"></span>
      </div>
      <div class="mb-3 col-md-3">
        <label asp-for="SalePrice" class="form-label">SalePrice</label>
        <input class="form-control" asp-for="SalePrice" placeholder="SalePrice">
         <span asp-validation-for="SalePrice" class="text-danger"></span>
      </div>

  </div class="row align-items-center">
      <div class="mb-3 col-md-4">
          <label asp-for="Desc" class="form-label">Description</label>
          <textarea style="width:500px; height:100px" class="form-control"  asp-for="Desc" placeholder="Description"></textarea>
          <span asp-validation-for="Desc" class="text-danger"></span>
      </div> 
      <div style="margin-bottom:20px">
          <label asp-for="DiscountPrice" class="form-lable">DiscountPrice</label>
          <input class="form-control" asp-for="DiscountPrice" placeholder="DiscountPrice">
          <span asp-validation-for="DiscountPrice" class="text-danger"></span>
      </div>
      <div style="display:flex; justify-content:center; align-content:center ">
           <button type="submit" class="btn btn-primary">Create</button>
      </div>
      <div class="form-check mb-3 col-md-2" style="padding: 40px">
            <input class="form-check-input" asp-for="IsAvailable">
            <label class="form-check-label" asp-for="IsAvailable">
            IsAvailable
            </label>
      </div>
      <div class="mb-3 col-md-2">
          <label asp-for="AuthorId" class="form-lable">Authors</label>
          <select class="form-select" asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors,"Id","Fullname"))">
            @*@foreach (Author item in ViewBag.Authors)
                {
                    <option value="@item.Id">@item.Fullname</option>
                }*@
          </select>
      </div>
      <div class="mb-3 col-md-2">
          <label asp-for="GenreId" class="form-lable">Genres</label>
          <select class="form-select" asp-for="AuthorId">
                @foreach (Genre item in ViewBag.Genres)
                {
                        <option value="@item.Id">@item.Name</option>
                }
          </select>
      </div>
</form>
</div>

